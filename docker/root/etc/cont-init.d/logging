#!/usr/bin/env sh

set -eux

mkdir -p \
  /var/log/workerman \
  /var/log/messenger-consumer \
  /run/workerman

chown nobody:nogroup \
  /var/log/workerman \
  /var/log/messenger-consumer

chown www-data:www-data \
  /run/workerman

chmod 02755 \
  /var/log/workerman \
  /var/log/messenger-consumer \
  /run/workerman

mkfifo -m 0600 \
  /run/s6/workerman-log.fifo

chown www-data:www-data \
  /run/s6/workerman-log.fifo
